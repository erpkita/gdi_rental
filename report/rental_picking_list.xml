<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="gdi_rental_picking_list_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
            <t t-set="colclass" t-value="('col-sm-5' if report_type == 'html' else 'col-5') + ' ml-auto'"/>
            <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
            <div class="page" style="font-family: Arial, sans-serif;">
                <div class="oe_structure"/>
                <div class="pt-3"/>
                <div class="row">
                    <div class="col-12" style="text-align:center; font-size:14px;">
                        <span>RENTAL PICKING LIST</span>
                    </div>
                </div>
                <div class="pt-3"/>
                <div class="row" style="font-size:12px;">
                    <div class="col-7">
                        <table width="100%">
                            <t t-if="o.gdi_rental_id">
                                <t t-set="partner_sale" t-value="o.sale_id.partner_id or o.gdi_rental_id.partner_id"/>
                                <tr>
                                    <t t-if="o.operation_type_name == 'Receipts'">
                                        <td style="width:24%;">Vendor</td>
                                    </t>
                                    <t t-else="">
                                        <td style="width:23%;">Customer Name</td>
                                    </t>
                                    <td style="width:1%;">:&#160;&#160;</td>
                                    <td><span t-esc="partner_sale.partner_ref_no"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner_sale.name"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner_sale.street"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner_sale.street2"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner_sale.city"/>&#160;<span t-esc="partner_sale.zip"/></td>
                                </tr>
                            </t>
                            <t t-else="">
                                <tr>
                                    <t t-if="o.operation_type_name == 'Receipts'">
                                        <td style="width:24%;">Vendor</td>
                                    </t>
                                    <t t-else="">
                                        <td style="width:23%;">Customer Name</td>
                                    </t>
                                    <td style="width:0%;">:&#160;&#160;</td>
                                    <td>
                                        <t t-if="partner.is_company">
                                            <span t-esc="partner.partner_ref_no"/>
                                        </t>
                                        <t t-elif="partner.parent_id">
                                            <span t-esc="partner.parent_id.partner_ref_no"/>
                                        </t>
                                        <t t-else="">
                                            <span t-esc="partner.name"/>
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner.name"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner.street"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner.street2"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner.city"/>&#160;<span t-esc="partner.zip"/></td>
                                </tr>
                            </t>
                        </table>
                        <br/>
                    </div>
                    <div class="col-5">
                        <table width="100%">
                            <tr>
                                <td style="width:40%;">Date</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td>
                                    <t t-if="o.state == 'done'">
                                        <span t-esc="o.date_done.strftime('%d %b %Y')"/>
                                    </t>
                                    <t t-else="">
                                        <span t-esc="o.scheduled_date.strftime('%d %b %Y')"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:40%;">RO Number</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td><span t-field="o.gdi_rental_id.name"/></td>
                            </tr>
                            <tr>
                                <td style="width:40%;">DO Number</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td><span t-field="o.name"/></td>
                            </tr>
                            <tr>
                                <td style="width:40%;">Sales Name</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td><span t-field="o.src_user_id.name"/></td>
                            </tr>
                            <tr>
                                <td style="width:40%;">Prepared By</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td><span t-field="o.src_user_id.name"/></td>
                            </tr>
                            <tr>
                                <td style="width:40%;">Checked By</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td><span t-field="o.src_user_id.name"/></td>
                            </tr>
                        </table>
                        <br/>
                    </div>
                </div>
                <div class="pt-3"/>
                <table style="width: 100%; border-collapse: collapse; margin-bottom: 15px; font-size: 12px;">
                    <thead>
                        <tr>
                            <th style="border: 1px solid #000; padding: 6px 4px; text-align: center; background-color: #f0f0f0; font-weight: bold; font-size: 12px; width: 5%;">No</th>
                            <th style="border: 1px solid #000; padding: 6px 4px; text-align: center; background-color: #f0f0f0; font-weight: bold; font-size: 12px; width: 45%;">Item Description</th>
                            <th style="border: 1px solid #000; padding: 6px 4px; text-align: center; background-color: #f0f0f0; font-weight: bold; font-size: 12px; width: 8%;">UOM</th>
                            <th style="border: 1px solid #000; padding: 6px 4px; text-align: center; background-color: #f0f0f0; font-weight: bold; font-size: 12px; width: 8%;">Quantity</th>
                            <th style="border: 1px solid #000; padding: 6px 4px; text-align: center; background-color: #f0f0f0; font-weight: bold; font-size: 12px; width: 34%;">Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Loop through rental_order_item_ids -->
                        <t t-set="item_counter" t-value="1"/>
                        <t t-foreach="o.rental_order_item_ids" t-as="rental_item">
                            <!-- Main Item Row -->
                            <tr style="background-color: #ffffff;">
                                <td style="border: 1px solid #000; padding: 4px 3px; vertical-align: top; font-size: 10px; text-align: center; font-weight: bold;">
                                    <span t-esc="item_counter"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 4px 3px; vertical-align: top; font-size: 10px;">
                                    <strong t-esc="rental_item.name or rental_item.product_id.name"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 4px 3px; vertical-align: top; font-size: 10px; text-align: center;">
                                    <t t-if="rental_item.contract_line_id.item_type == 'unit'">
                                        <span style="text-transform:uppercase; font-weight:bold;" t-esc="rental_item.product_uom.name"/>
                                    </t>
                                    <t t-else="">
                                        <strong>SET</strong>
                                    </t>
                                </td>
                                <td style="border: 1px solid #000; padding: 4px 3px; vertical-align: top; font-size: 10px; text-align: center;">
                                    <span t-esc="int(rental_item.product_uom_qty)"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 4px 3px; vertical-align: top; font-size: 10px;">
                                    <!-- <span t-esc="rental_item.note or ''"/> -->
                                </td>
                            </tr>
                            
                            <!-- Detail Rows for each stock_move_id -->
                            <t t-foreach="rental_item.stock_move_ids" t-as="stock_move">
                                <tr>
                                    <!-- Empty cell for No column -->
                                    <td style="border: 1px solid #000; padding: 0; vertical-align: top; border-top: none;"></td>
                                    
                                    <!-- Detail content spans from Item Description column to the end -->
                                    <td colspan="4" style="border: 1px solid #000; padding: 6px 8px; vertical-align: top; font-size: 10px; border-top: none;">
                                        <!-- Item Code and Description Header -->
                                        <div style="font-weight: bold; margin-bottom: 3px; font-size: 10px; line-height: 1.2;">
                                            <span t-esc="stock_move.product_id.item_code_ref or ''"/>
                                            <t t-if="stock_move.product_id.mysql_code"> [<span t-esc="stock_move.product_id.variant_mysql_code or stock_move.product_id.variant_mysql_code"/>]</t>
                                        </div>
                                        
                                        <!-- Product Description -->
                                        <div style="margin-bottom: 2px; font-size: 10px; line-height: 1.2;">
                                            <span t-esc="stock_move.product_id.product_name"/>
                                        </div>
                                        
                                        <!-- Source Location -->
                                        <div style="font-style: italic; color: #666; margin-bottom: 6px; font-size: 10px; line-height: 1.2;">
                                            Source Location : <span t-esc="stock_move.location_id.display_name"/>
                                        </div>
                                        
                                        <!-- Detail table for moveline_ids -->
                                        <table style="width: 100%; border-collapse: collapse; margin: 0; font-size: 10px;">
                                            <thead>
                                                <tr>
                                                    <th style="border: 1px solid #333; padding: 3px 2px; text-align: center; background-color: #f5f5f5; font-size: 10px; font-weight: bold; width: 8%;">No</th>
                                                    <th style="border: 1px solid #333; padding: 3px 2px; text-align: center; background-color: #f5f5f5; font-size: 10px; font-weight: bold; width: 15%;">SKU</th>
                                                    <th style="border: 1px solid #333; padding: 3px 2px; text-align: center; background-color: #f5f5f5; font-size: 10px; font-weight: bold; width: 25%;">Lot/SN.</th>
                                                    <th style="border: 1px solid #333; padding: 3px 2px; text-align: center; background-color: #f5f5f5; font-size: 10px; font-weight: bold; width: 13%;">Qty delivered</th>
                                                    <th style="border: 1px solid #333; padding: 3px 2px; text-align: center; background-color: #f5f5f5; font-size: 10px; font-weight: bold; width: 13%;">Qty returned</th>
                                                    <th style="border: 1px solid #333; padding: 3px 2px; text-align: center; background-color: #f5f5f5; font-size: 10px; font-weight: bold; width: 26%;">Notes</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!-- Loop through moveline_ids -->
                                                <t t-set="line_counter" t-value="1"/>
                                                <t t-foreach="stock_move.move_line_ids" t-as="move_line">
                                                    <tr>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;"><span t-esc="line_counter"/></td>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;"><span t-esc="move_line.product_id.item_code_ref or ''"/></td>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;"><span t-esc="move_line.lot_id.name or move_line.lot_name or '-'"/></td>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;">
                                                            <span t-esc="int(move_line.product_qty or move_line.qty_done)"/>
                                                            <span t-esc="move_line.product_uom_id.name"/>
                                                        </td>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;">
                                                            <!-- Qty returned field -->
                                                        </td>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;">
                                                            <!-- Notes field -->
                                                        </td>
                                                    </tr>
                                                    <t t-set="line_counter" t-value="line_counter + 1"/>
                                                </t>
                                                
                                                <!-- Handle case where no moveline_ids exist -->
                                                <t t-if="not stock_move.move_line_ids">
                                                    <tr>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;">1</td>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;"><span t-esc="stock_move.product_id.default_code or ''"/></td>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;">-</td>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;">
                                                            <span t-esc="int(stock_move.product_qty or stock_move.quantity_done)"/>
                                                            <span t-esc="stock_move.product_uom.name"/>
                                                        </td>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;"></td>
                                                        <td style="border: 1px solid #333; padding: 2px 1px; text-align: center; font-size: 10px;"></td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </t>
                            <t t-set="item_counter" t-value="item_counter + 1"/>
                        </t>
                    </tbody>
                </table>

                <div style="page-break-inside: avoid;page-break-before: auto;page-break-after:avoid;">
                    <div style="margin-top: 20px; margin-bottom: 15px;">
                        <div style="font-size: 12px; font-weight: bold; margin-bottom: 8px;">
                            Special Instruction/Notes :
                        </div>
                        <div style="border-bottom: 1px solid #000; height: 40px; margin-bottom: 3px;"></div>
                    </div>
                </div>

                <div style="page-break-inside: avoid;page-break-before: auto;page-break-after:avoid;">
                    <div style="margin-top: 25px; margin-bottom: 20px; font-size: 11px; line-height: 1.4;">
                        <div style="font-weight: bold; margin-bottom: 8px;">
                            Customer Acknowledgement
                        </div>
                        <div style="margin-bottom: 12px;">
                            I, the undersigned, acknowledge the condition of the equipment at both delivery and return. I understand that any damages may incur additional charges.
                        </div>
                        
                        <!-- Signature Fields Table -->
                        <table style="width: 100%; border-collapse: collapse; margin-bottom: 15px;">
                            <tr>
                                <td style="width: 33%; padding: 8px 4px; font-size: 11px;">
                                    Customer Signature at delivery: _________________
                                </td>
                                <td style="width: 33%; padding: 8px 4px; font-size: 11px; text-align: center;">
                                    Company Stamp: ________________
                                </td>
                                <td style="width: 34%; padding: 8px 4px; font-size: 11px; text-align: right;">
                                    Date: ________________
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 33%; padding: 8px 4px; font-size: 11px;">
                                    Customer Signature at return: ___________________
                                </td>
                                <td style="width: 33%; padding: 8px 4px; font-size: 11px; text-align: center;">
                                    Company Stamp: ________________
                                </td>
                                <td style="width: 34%; padding: 8px 4px; font-size: 11px; text-align: right;">
                                    Date: ________________
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div style="page-break-inside: avoid;page-break-before: auto;page-break-after:avoid;">
                    <div style="margin: 20px 0; border-top: 2px dashed #000;"></div>

                    <div style="margin-top: 20px; font-size: 12px; line-height: 1.4;">
                        <div style="font-weight: bold; margin-bottom: 8px;">
                            Equipment Owner Representative
                        </div>
                        <div style="font-weight: bold; margin-bottom: 12px;">
                            PT. GREAT DYNAMIC INDONESIA
                        </div>
                        
                        <table style="width: 100%; border-collapse: collapse;">
                            <tr>
                                <td style="width: 35%; padding: 10px 4px; font-size: 12px;">
                                    Name: ____________________________
                                </td>
                                <td style="width: 30%; padding: 10px 4px; font-size: 12px; text-align: center;">
                                    Signature: ______________________
                                </td>
                                <td style="width: 35%; padding: 10px 4px; font-size: 12px; text-align: right;">
                                    Date: ____________________________
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_rental_picking_list">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="gdi_rental.gdi_rental_picking_list_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
