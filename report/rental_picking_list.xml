<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="gdi_rental_picking_list_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
            <t t-set="colclass" t-value="('col-sm-5' if report_type == 'html' else 'col-5') + ' ml-auto'"/>
            <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
            <div class="page">
                <div class="oe_structure"/>
                <div class="pt-3"/>
                <div class="row">
                    <div class="col-12" style="text-align:center; font-size:15px;">
                        <span>RENTAL PICKING LIST</span>
                    </div>
                </div>
                <div class="pt-3"/>
                <div class="row" style="font-size:14px;">
                    <div class="col-7">
                        <table width="100%">
                            <t t-if="o.gdi_rental_id">
                                <t t-set="partner_sale" t-value="o.sale_id.partner_id or o.gdi_rental_id.partner_id"/>
                                <tr>
                                    <t t-if="o.operation_type_name == 'Receipts'">
                                        <td style="width:24%;">Vendor</td>
                                    </t>
                                    <t t-else="">
                                        <td style="width:24%;">Customer Name</td>
                                    </t>
                                    <td style="width:2%;">:&#160;&#160;</td>
                                    <td><span t-esc="partner_sale.partner_ref_no"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner_sale.name"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner_sale.street"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner_sale.street2"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner_sale.city"/>&#160;<span t-esc="partner_sale.zip"/></td>
                                </tr>
                            </t>
                            <t t-else="">
                                <tr>
                                    <t t-if="o.operation_type_name == 'Receipts'">
                                        <td style="width:24%;">Vendor</td>
                                    </t>
                                    <t t-else="">
                                        <td style="width:24%;">Customer Name</td>
                                    </t>
                                    <td style="width:2%;">:&#160;&#160;</td>
                                    <td>
                                        <t t-if="partner.is_company">
                                            <span t-esc="partner.partner_ref_no"/>
                                        </t>
                                        <t t-elif="partner.parent_id">
                                            <span t-esc="partner.parent_id.partner_ref_no"/>
                                        </t>
                                        <t t-else="">
                                            <span t-esc="partner.name"/>
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner.name"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner.street"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner.street2"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><span t-esc="partner.city"/>&#160;<span t-esc="partner.zip"/></td>
                                </tr>
                            </t>
                        </table>
                        <br/>
                    </div>
                    <div class="col-5">
                        <table width="100%">
                            <tr>
                                <td style="width:40%;">Date</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td>
                                    <t t-if="o.state == 'done'">
                                        <span t-esc="o.date_done.strftime('%d %b %Y')"/>
                                    </t>
                                    <t t-else="">
                                        <span t-esc="o.scheduled_date.strftime('%d %b %Y')"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:40%;">RO Number</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td><span t-field="o.gdi_rental_id.name"/></td>
                            </tr>
                            <tr>
                                <td style="width:40%;">DO Number</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td><span t-field="o.name"/></td>
                            </tr>
                            <tr>
                                <td style="width:40%;">Sales Name</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td><span t-field="o.src_user_id.name"/></td>
                            </tr>
                            <tr>
                                <td style="width:40%;">Prepared By</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td><span t-field="o.src_user_id.name"/></td>
                            </tr>
                            <tr>
                                <td style="width:40%;">Checked By</td>
                                <td style="width:1%;">:&#160;&#160;</td>
                                <td><span t-field="o.src_user_id.name"/></td>
                            </tr>
                        </table>
                        <br/>
                    </div>
                </div>
                <div class="pt-3"/>
                <table class="table-sm" style="width: 100%; border-collapse: collapse; margin-bottom: 15px; font-size: 14px;">
                    <thead>
                        <tr>
                            <th style="border: 1px solid #000; padding: 5px; text-align: center; background-color: #f0f0f0; font-weight: bold; width: 5%;">No</th>
                            <th style="border: 1px solid #000; padding: 5px; text-align: center; background-color: #f0f0f0; font-weight: bold; width: 45%;">Item Description</th>
                            <th style="border: 1px solid #000; padding: 5px; text-align: center; background-color: #f0f0f0; font-weight: bold; width: 8%;">UOM</th>
                            <th style="border: 1px solid #000; padding: 5px; text-align: center; background-color: #f0f0f0; font-weight: bold; width: 8%;">Quantity</th>
                            <th style="border: 1px solid #000; padding: 5px; text-align: center; background-color: #f0f0f0; font-weight: bold; width: 34%;">Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Loop through rental_order_item_ids -->
                        <t t-set="item_counter" t-value="1"/>
                        <t t-foreach="o.rental_order_item_ids" t-as="rental_item">
                            <!-- Main Item Row -->
                            <tr>
                                <td style="border: 1px solid #000; padding: 3px 5px; text-align: center; vertical-align: top;">
                                    <span t-esc="item_counter"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 3px 5px; vertical-align: top;">
                                    <strong t-esc="rental_item.name or rental_item.product_id.name"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 3px 5px; text-align: center; vertical-align: top;">
                                    <span t-esc="rental_item.product_uom.name"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 3px 5px; text-align: center; vertical-align: top;">
                                    <span t-esc="int(rental_item.product_uom_qty)"/>
                                </td>
                                <td style="border: 1px solid #000; padding: 3px 5px; vertical-align: top;">
                                    <!-- <span t-esc="rental_item.note or ''"/> -->
                                </td>
                            </tr>
                            
                            <!-- Detail Rows for each stock_move_id -->
                            <t t-foreach="rental_item.stock_move_ids" t-as="stock_move">
                                <tr>
                                    <td style="border: 1px solid #000; padding: 3px 5px;" colspan="5">
                                        <div style="margin: 5px 0;">
                                            <strong>
                                                <span t-esc="stock_move.name or stock_move.product_id.item_code_ref or ''"/>
                                                <t t-if="stock_move.product_id.item_code_ref"> [<span t-esc="stock_move.product_id.item_code_ref"/>]</t>
                                            </strong><br/>
                                            <span t-esc="stock_move.product_id.name"/><br/>
                                            <em>Source Location : <span t-esc="stock_move.location_id.display_name"/></em>
                                        </div>
                                        
                                        <!-- Detail table for moveline_ids -->
                                        <table style="width: 100%; border-collapse: collapse; margin: 5px 0; font-size: 8px;">
                                            <thead>
                                                <tr>
                                                    <th style="border: 1px solid #666; padding: 2px; text-align: center; background-color: #e8e8e8; font-size: 8px; width: 8%;">No</th>
                                                    <th style="border: 1px solid #666; padding: 2px; text-align: center; background-color: #e8e8e8; font-size: 8px; width: 15%;">SKU</th>
                                                    <th style="border: 1px solid #666; padding: 2px; text-align: center; background-color: #e8e8e8; font-size: 8px; width: 25%;">Lot/SN.</th>
                                                    <th style="border: 1px solid #666; padding: 2px; text-align: center; background-color: #e8e8e8; font-size: 8px; width: 13%;">Qty delivered</th>
                                                    <th style="border: 1px solid #666; padding: 2px; text-align: center; background-color: #e8e8e8; font-size: 8px; width: 13%;">Qty returned</th>
                                                    <th style="border: 1px solid #666; padding: 2px; text-align: center; background-color: #e8e8e8; font-size: 8px; width: 26%;">Notes</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!-- Loop through moveline_ids -->
                                                <t t-set="line_counter" t-value="1"/>
                                                <t t-foreach="stock_move.move_line_ids" t-as="move_line">
                                                    <tr>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;">
                                                            <span t-esc="line_counter"/>
                                                        </td>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;">
                                                            <span t-esc="move_line.product_id.item_code_ref or ''"/>
                                                        </td>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;">
                                                            <span t-esc="move_line.lot_id.name or move_line.lot_name or '-'"/>
                                                        </td>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;">
                                                            <span t-esc="int(move_line.product_qty or move_line.qty_done)"/>
                                                            <span t-esc="move_line.product_uom_id.name"/>
                                                        </td>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;">
                                                            <!-- Qty returned - you may need to adjust this field based on your model -->
                                                            <span t-esc="move_line.qty_returned or ''"/>
                                                        </td>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;">
                                                            <span t-esc="move_line.note or ''"/>
                                                        </td>
                                                    </tr>
                                                    <t t-set="line_counter" t-value="line_counter + 1"/>
                                                </t>
                                                
                                                <!-- Handle case where no moveline_ids exist -->
                                                <t t-if="not stock_move.moveline_ids">
                                                    <tr>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;">1</td>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;">
                                                            <span t-esc="stock_move.product_id.default_code or ''"/>
                                                        </td>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;">-</td>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;">
                                                            <span t-esc="int(stock_move.product_qty or stock_move.quantity_done)"/>
                                                            <span t-esc="stock_move.product_uom.name"/>
                                                        </td>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;"></td>
                                                        <td style="border: 1px solid #666; padding: 2px; text-align: center; font-size: 8px;"></td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </t>
                            <t t-set="item_counter" t-value="item_counter + 1"/>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="report_rental_picking_list">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="gdi_rental.gdi_rental_picking_list_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
