<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_rental_quotation_tree" model="ir.ui.view">
        <field name="name">view.rental.quotation.tree</field>
        <field name="model">rental.quotation</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state in ['lock']" 
                  decoration-info="state in ['draft', 'sent']" 
                  decoration-danger="state == 'cancel'" 
                  decoration-success="state == 'confirmed'"> 
                <field name="name"/>
                <field name="date_order"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="amount_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_rental_quotation_form" model="ir.ui.view">
        <field name="name">view.rental.quotation.form</field>
        <field name="model">rental.quotation</field>
        <field name="arch" type="xml">
            <form string="Rental Quotation" class="o_sale_order">
                <header>
                    <button name="action_send_quotation" states="draft" type="object" string="Send Quotation" class="oe_highlight"/>
                    <button name="action_print_quotation" states="draft,sent,confirm" type="object" string="Print Quotation" class="oe_highlight"/>
                    <button name="action_confirm" states="sent" type="object" string="Confirm and Make Order" class="oe_highlight"/>
                    <button name="action_cancel" states="draft,sent" type="object" string="Cancel"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,confirm,lock"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group name="rq_header">
                        <group name="partner_details">
                            <field name="id" invisible="1"/>
                            <field name="partner_id" 
                                   attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"
                                   widget="res_partner_many2one" 
                                   context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}" 
                                   options='{"always_reload": True}'/>
                            <field 
                                   name="partner_invoice_id" 
                                   attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"
                                   groups="sale.group_delivery_invoice_address" 
                                   context="{'default_type':'invoice'}" 
                                   options='{"always_reload": True}'
                                   domain="['|', ('parent_id', '=', partner_id), ('id', '=', partner_id)]"/>
                            <field name="partner_shipping_id" 
                                   attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"
                                   groups="sale.group_delivery_invoice_address" 
                                   context="{'default_type':'delivery'}" 
                                   options='{"always_reload": True}'
                                   domain="['|', ('parent_id', '=', partner_id), ('id', '=', partner_id)]"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                        </group>
                        <group name="order_details">
                            <field name="validity_date" attrs="{'invisible': [('state', 'in', ['confirm', 'lock', 'cancel'])], 'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"/>
                            <field name="date_order" required="1" attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"/>
                            <label for="pricelist_id" groups="product.group_product_pricelist"/>
                            <div groups="product.group_product_pricelist" class="o_row">
                                <field name="pricelist_id" options="{'no_open':True,'no_create': True}" attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"/>
                                <!-- <button name="update_prices" type="object"
                                    string=" Update Prices"
                                    help="Recompute all prices based on this pricelist"
                                    class="btn-link mb-1 px-0" icon="fa-refresh"
                                    confirm="This will update all unit prices based on the currently set pricelist."
                                    attrs="{'invisible': ['|', ('show_update_pricelist', '=', False), ('state', 'in', ['sale', 'done','cancel'])]}"/> -->
                            </div>
                            <field name="currency_id" invisible="1"/>
                            <field name="customer_reference" attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"/>
                            <field name="customer_po_number" attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"/>
                            <field name="company_id" 
                                   options="{'no_create': True}" 
                                   groups="base.group_multi_company"
                                   invisible="1"/>
                        </group>
                    </group>
                    <group name="rental_duration" string="Rental Duration">
                        <group>
                            <div class="alert-secondary" colspan="2" role="alert" style="margin-bottom: 8px;">
                                <strong>Info:</strong> This duration is based on the item with the longest rental period among the selected items.
                            </div>
                            <label for="duration"/>
                            <!-- Info box above the fields, not wrapping them -->
                            <div class="o_row">
                                <field name="duration" attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"/>
                                <field name="duration_unit" attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"/>
                            </div>
                        </group>
                        <group>
                            <field name="start_date" attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"/>
                            <field name="end_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Quotation Lines" name="quotation_lines" >
                            <field name="order_line" context="{'default_quotation_id': id,
                                                               'default_duration': duration,
                                                               'default_duration_unit': duration_unit}"
                                   widget="section_and_note_one2many"
                                   attrs="{'readonly': [('state', 'in', ('confirm', 'cancel', 'lock'))]}">
                                <tree
                                    string="Rental Quotation Lines"
                                >
                                    <control>
                                        <create name="add_product_control" string="Add a product"/>
                                    </control>

                                    <!-- Hidden fields for forecast widget -->
                                    <field name="product_type" invisible="1"/>
                                    <field name="virtual_available_at_date" invisible="1"/>
                                    <field name="qty_available_today" invisible="1"/>
                                    <field name="free_qty_today" invisible="1"/>
                                    <field name="scheduled_date" invisible="1"/>
                                    <field name="forecast_expected_date" invisible="1"/>
                                    <field name="warehouse_id" invisible="1"/>

                                    <field name="sequence" widget="handle" />
                                    <!-- We do not display the type because we don't want the user to be bothered with that information if he has no section or note. -->
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="item_type" invisible="1"/>
                                    <field name="item_code"/>
                                    <field
                                        name="product_id"
                                        force_save="1"
                                        context="{
                                            'partner_id': parent.partner_id,
                                            'quantity': product_uom_qty,
                                            'pricelist': parent.pricelist_id,
                                            'uom':product_uom,
                                            'company_id': parent.company_id,
                                            'default_lst_price': price_unit,
                                            'default_description_sale': name
                                        }"
                                        domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"
                                        widget="product_configurator"
                                        attrs="{
                                            'required': [('item_type', '=', 'unit')]
                                        }"
                                        invisible="1"
                                    />

                                    <field name="product_template_id"
                                      string="Product"
                                      invisible="1"
                                      context="{
                                          'partner_id': parent.partner_id,
                                          'quantity': product_uom_qty,
                                          'pricelist': parent.pricelist_id,
                                          'uom':product_uom,
                                          'company_id': parent.company_id,
                                          'default_list_price': price_unit,
                                          'default_description_sale': name
                                      }"
                                      domain="[('rent_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"
                                      widget="product_configurator"/>
                                    <field name="name" widget="section_and_note_text" required="1"/>
                                    <field name="duration_string" string="Duration"/>
                                    <field
                                        name="product_uom_qty"
                                        context="{
                                            'partner_id': parent.partner_id,
                                            'quantity': product_uom_qty,
                                            'pricelist': parent.pricelist_id,
                                            'uom': product_uom,
                                            'company_id': parent.company_id
                                        }"/>
                                    <field name="current_stock_qty" string="Available" readonly="1" optional="show"/>
                                    <field name="virtual_stock_qty" string="Forecast" readonly="1" optional="show"/>
                                    <field name="stock_status" string="Status" readonly="1" optional="show"/>
                                    <field name="stock_info_display" string="Stock Info" readonly="1" optional="hide"/>
                                    <field
                                        name="product_uom"
                                        force_save="1"
                                        string="UoM"
                                        required="1"
                                        context="{'company_id': parent.company_id}"
                                        groups="uom.group_uom"
                                        optional="show" invisible="1"
                                    />
                                    <field name="product_uom_txt" string="UoM"/>
                                    <field
                                        name="price_unit"
                                    />
                                    <field
                                        name="tax_id"
                                        widget="many2many_tags"
                                        options="{'no_create': True}"
                                        domain="[('type_tax_use','=','sale'),('company_id','=',parent.company_id)]"
                                        context="{'active_test': True}"
                                        optional="hide"
                                    />
                                    <field name="discount" string="Disc.%" groups="product.group_discount_per_so_line" optional="hide" widget="product_discount"/>
                                    <field name="price_subtotal" widget="monetary" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <field name="price_total" widget="monetary" groups="account.group_show_line_subtotals_tax_included"/>
                                    <field name="state" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="price_tax" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                </tree>
                                <form>
                                    <!--
                                        We need the sequence field to be here for new lines to be added at the correct position.
                                        TODO: at some point we want to fix this in the framework so that an invisible field is not required.
                                    -->
                                    <field name="sequence" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="product_uom_category_id" invisible="1"/>

                                    <!-- Hidden fields for forecast widget -->
                                    <field name="product_type" invisible="1"/>
                                    <field name="virtual_available_at_date" invisible="1"/>
                                    <field name="qty_available_today" invisible="1"/>
                                    <field name="free_qty_today" invisible="1"/>
                                    <field name="scheduled_date" invisible="1"/>
                                    <field name="forecast_expected_date" invisible="1"/>
                                    <field name="warehouse_id" invisible="1"/>
                                    <field name="state" invisible="1"/>

                                    <group col="4">

                                        <group colspan="4" name="product_info" string="Product Information">
                                            <field name="item_type"/>
                                            <field name="product_id"
                                                domain="[('rent_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"
                                                context="{
                                                    'partner_id':parent.partner_id, 
                                                    'quantity':product_uom_qty, 
                                                    'pricelist':parent.pricelist_id, 
                                                    'uom':product_uom, 
                                                    'company_id': parent.company_id}"
                                                attrs="{
                                                    'required': [('item_type', '=', 'unit')],
                                                    'invisible': [('item_type', '=', 'set')]
                                                }"
                                                force_save="1"
                                                widget="many2one_barcode"
                                                options="{'no_create': True, 'no_open': True}"
                                            />
                                            <field name="name" string="Description"/>
                                            <field name="item_code" attrs="{'invisible': [('item_type', '!=', 'set')]}"/>
                                        </group> 

                                        <group name="product_period" colspan="2" string="Rental Duration">
                                            <label for="duration"/>
                                            <div class="o_row" name="duration_section">
                                                <field name="duration"/>
                                                <field name="duration_unit"/>
                                            </div>
                                            <label for="start_date" string="Period"/>
                                            <div class="o_row">
                                                <field name="start_date" widget="daterange" nolabel="1" class="oe_inline" options="{'related_end_date': 'end_date'}"/>
                                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                                <field name="end_date" widget="daterange" nolabel="1" class="oe_inline" options="{'related_start_date': 'start_date'}"/>
                                            </div>
                                        </group>
                                        <group colspan="2" string="Price and Quantity">
                                            <label for="product_uom_qty"/>
                                            <div class="o_row" name="ordered_qty">
                                                <field context="{
                                                    'partner_id':parent.partner_id, 
                                                    'quantity':product_uom_qty, 
                                                    'pricelist':parent.pricelist_id, 
                                                    'uom':product_uom, 
                                                    'uom_qty_change':True, 
                                                    'company_id': parent.company_id}" 
                                                    name="product_uom_qty"/>
                                                <field name="product_uom"
                                                       force_save="1"  attrs="{'invisible': [('item_type', '!=', 'unit')]}"
                                                       groups="uom.group_uom" 
                                                       class="oe_no_button"/>
                                                <field name="product_uom_txt" attrs="{'invisible': [('item_type', '!=', 'set')]}"/>
                                            </div>
                                            <field name="price_unit"/>
                                        </group>

                                        <group colspan="2" string="Taxes and Discounts">
                                            <label for="discount" groups="product.group_discount_per_so_line"/>
                                            <div name="discount" groups="product.group_discount_per_so_line">
                                                <field name="discount" class="oe_inline"/> %
                                            </div>
                                            <field name="tax_id" 
                                                   widget="many2many_tags" 
                                                   options="{'no_create': True}" 
                                                   context="{'search_view_ref': 'account.account_tax_view_search'}" 
                                                   domain="[
                                                        ('type_tax_use','=','sale'), 
                                                        ('company_id','=',parent.company_id)
                                                    ]"/>
                                        </group>

                                        <group string="Total" colspan="2">
                                            <field name="price_subtotal"/>
                                        </group>

                                        <!-- Stock Information Section -->
                                        <group colspan="4" string="Stock Information" attrs="{'invisible': [('product_id', '=', False)]}">
                                            <!-- In Stock Alert -->
                                            <div class="alert alert-success mb-3 border-start border-5 border-success" 
                                                role="alert" 
                                                style="background-color: #d1f2eb; border-radius: 2px; padding: 16px;"
                                                attrs="{'invisible': [('stock_status', '!=', 'in_stock')]}">
                                                <!-- <div class="d-flex align-items-center mb-2">
                                                    <span style="font-size: 12px; margin-right: 10px;">✅</span>
                                                    <strong style="font-size: 12px; color: #0f5132;">In Stock</strong>
                                                </div> -->
                                                <div class="row mt-3">
                                                    <div class="col-4">
                                                        <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Available Qty</small>
                                                        <field name="current_stock_qty" nolabel="1" readonly="1" 
                                                            style="font-weight: bold; font-size: 12px; color: #0f5132;"/>
                                                    </div>
                                                    <div class="col-4">
                                                        <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Forecast Qty</small>
                                                        <field name="virtual_stock_qty" nolabel="1" readonly="1" 
                                                            style="font-weight: bold; font-size: 12px; color: #0f5132;"/>
                                                    </div>
                                                    <div class="col-4">
                                                        <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Requested Qty</small>
                                                        <field name="product_uom_qty" nolabel="1" readonly="1" 
                                                            style="font-weight: bold; font-size: 12px; color: #0f5132;"/>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <!-- Low Stock Alert -->
                                            <div class="alert alert-warning mb-3 border-start border-5 border-warning" 
                                                role="alert" 
                                                style="background-color: #fff3cd; border-radius: 2px; padding: 16px;"
                                                attrs="{'invisible': [('stock_status', '!=', 'low_stock')]}">
                                                <!-- <div class="d-flex align-items-center mb-2">
                                                    <span style="font-size: 12px; margin-right: 10px;">⚠️</span>
                                                    <strong style="font-size: 12px; color: #664d03;">Low Stock - Reorder Recommended</strong>
                                                </div> -->
                                                <div class="row mt-3">
                                                    <div class="col-4">
                                                        <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Available Qty</small>
                                                        <field name="current_stock_qty" nolabel="1" readonly="1" 
                                                            style="font-weight: bold; font-size: 12px; color: #664d03;"/>
                                                    </div>
                                                    <div class="col-4">
                                                        <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Forecast Qty</small>
                                                        <field name="virtual_stock_qty" nolabel="1" readonly="1" 
                                                            style="font-weight: bold; font-size: 12px; color: #664d03;"/>
                                                    </div>
                                                    <div class="col-4">
                                                        <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Requested Qty</small>
                                                        <field name="product_uom_qty" nolabel="1" readonly="1" 
                                                            style="font-weight: bold; font-size: 12px; color: #664d03;"/>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <!-- Out of Stock Alert -->
                                            <div class="alert alert-danger mb-3 border-start border-5 border-danger" 
                                                role="alert" 
                                                style="background-color: #f8d7da; border-radius: 2px; padding: 16px;"
                                                attrs="{'invisible': [('stock_status', '!=', 'out_of_stock')]}">
                                                <!-- <div class="d-flex align-items-center mb-2">
                                                    <span style="font-size: 12px; margin-right: 10px;">❌</span>
                                                    <strong style="font-size: 12px; color: #842029;">Out of Stock - Urgent Action Required</strong>
                                                </div> -->
                                                <div class="row mt-3">
                                                    <div class="col-4">
                                                        <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Available Qty</small>
                                                        <field name="current_stock_qty" nolabel="1" readonly="1" 
                                                            style="font-weight: bold; font-size: 12px; color: #842029;"/>
                                                    </div>
                                                    <div class="col-4">
                                                        <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Forecast Qty</small>
                                                        <field name="virtual_stock_qty" nolabel="1" readonly="1" 
                                                            style="font-weight: bold; font-size: 12px; color: #842029;"/>
                                                    </div>
                                                    <div class="col-4">
                                                        <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Requested Qty</small>
                                                        <field name="product_uom_qty" nolabel="1" readonly="1" 
                                                            style="font-weight: bold; font-size: 12px; color: #842029;"/>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <!-- Hidden fields for computation -->
                                            <field name="stock_status" invisible="1"/>
                                        </group>
                                    </group>
                                    <notebook>
                                        <page string="Components" attrs="{'invisible': [('item_type', '=', 'unit')]}">
                                            <group col="4">
                                                <field name="component_line_ids" colspan="4" nolabel="1" attrs="{'required': [('item_type', '=', 'set')]}">
                                                    <tree>
                                                        <field name="product_uom_category_id" invisible="1"/>
                                                        <field name="product_id" invisible="1"/>
                                                        <field name="name"/>
                                                        <field name="product_uom_qty"/>
                                                        <field name="product_uom"/>
                                                        <field name="price_unit"/>
                                                        <field name="price_subtotal" sum="Total Cost"/>
                                                    </tree>
                                                    <form string="Add Components">
                                                        <group>
                                                            <field name="product_uom_category_id" invisible="1"/>
                                                            <group colspan="4" string="Product Info">
                                                                <field name="product_id" domain="[('rent_ok', '=', True)]" options="{'no_create': True, 'no_open': True}"/>
                                                                <field name="name"/>
                                                            </group>

                                                            <group string="Rental Pricing and Quantity">
                                                                <label for="quotation_duration"/>
                                                                <div class="o_row" name="duration_section">
                                                                    <field name="quotation_duration"/>
                                                                    <field name="quotation_duration_unit"/>
                                                                </div>
                                                                <field name="price_unit"/>
                                                                <label for="product_uom_qty"/>
                                                                <div class="o_row" name="ordered_qty">
                                                                    <field name="product_uom_qty"/>
                                                                    <field name="product_uom"
                                                                        force_save="1" 
                                                                        groups="uom.group_uom" 
                                                                        class="oe_no_button"/>
                                                                </div>
                                                            </group>
                                                            
                                                            <group string="Total">
                                                                <field name="price_subtotal"/>
                                                                <!-- <field name="available_src_location_ids" invisible="1"/>
                                                                <field name="available_src_location_txt" readonly="1"/>
                                                                <field name="src_location_id" domain="[('id', 'in', available_src_location_ids)]"/>
                                                                <field name="available_qty"/>
                                                                <field name="lot_id"/> -->
                                                            </group>
                                                            <!-- Stock Information Section -->
                                                            <group colspan="4" string="Stock Information" attrs="{'invisible': [('product_id', '=', False)]}">
                                                                <!-- In Stock Alert -->
                                                                <div class="alert alert-success mb-3 border-start border-5 border-success" role="alert" style="background-color: #d1f2eb; border-radius: 2px; padding: 16px;" attrs="{'invisible': [('stock_status', '!=', 'in_stock')]}">
                                                                    <!-- <div class="d-flex align-items-center mb-2">
                                                                        <span style="font-size: 12px; margin-right: 10px;">✅</span>
                                                                        <strong style="font-size: 12px; color: #0f5132;">In Stock</strong>
                                                                    </div> -->
                                                                    <div class="row mt-3">
                                                                        <div class="col-4">
                                                                            <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Available Qty</small>
                                                                            <field name="current_stock_qty" nolabel="1" readonly="1" style="font-weight: bold; font-size: 12px; color: #0f5132;"/>
                                                                        </div>
                                                                        <div class="col-4">
                                                                            <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Forecast Qty</small>
                                                                            <field name="virtual_stock_qty" nolabel="1" readonly="1" style="font-weight: bold; font-size: 12px; color: #0f5132;"/>
                                                                        </div>
                                                                        <div class="col-4">
                                                                            <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Requested Qty</small>
                                                                            <field name="product_uom_qty" nolabel="1" readonly="1" style="font-weight: bold; font-size: 12px; color: #0f5132;"/>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                
                                                                <!-- Low Stock Alert -->
                                                                <div class="alert alert-warning mb-3 border-start border-5 border-warning" role="alert" style="background-color: #fff3cd; border-radius: 2px; padding: 16px;" attrs="{'invisible': [('stock_status', '!=', 'low_stock')]}">
                                                                    <!-- <div class="d-flex align-items-center mb-2">
                                                                        <span style="font-size: 12px; margin-right: 10px;">⚠️</span>
                                                                        <strong style="font-size: 12px; color: #664d03;">Low Stock - Reorder Recommended</strong>
                                                                    </div> -->
                                                                    <div class="row mt-3">
                                                                        <div class="col-4">
                                                                            <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Available Qty</small>
                                                                            <field name="current_stock_qty" nolabel="1" readonly="1" style="font-weight: bold; font-size: 12px; color: #664d03;"/>
                                                                        </div>
                                                                        <div class="col-4">
                                                                            <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Forecast Qty</small>
                                                                            <field name="virtual_stock_qty" nolabel="1" readonly="1" style="font-weight: bold; font-size: 12px; color: #664d03;"/>
                                                                        </div>
                                                                        <div class="col-4">
                                                                            <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Requested Qty</small>
                                                                            <field name="product_uom_qty" nolabel="1" readonly="1" style="font-weight: bold; font-size: 12px; color: #664d03;"/>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                
                                                                <!-- Out of Stock Alert -->
                                                                <div class="alert alert-danger mb-3 border-start border-5 border-danger" role="alert" style="background-color: #f8d7da; border-radius: 2px; padding: 16px;" attrs="{'invisible': [('stock_status', '!=', 'out_of_stock')]}">
                                                                    <!-- <div class="d-flex align-items-center mb-2">
                                                                        <span style="font-size: 12px; margin-right: 10px;">❌</span>
                                                                        <strong style="font-size: 12px; color: #842029;">Out of Stock - Urgent Action Required</strong>
                                                                    </div> -->
                                                                    <div class="row mt-3">
                                                                        <div class="col-4">
                                                                            <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Available Qty</small>
                                                                            <field name="current_stock_qty" nolabel="1" readonly="1" style="font-weight: bold; font-size: 12px; color: #842029;"/>
                                                                        </div>
                                                                        <div class="col-4">
                                                                            <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Forecast Qty</small>
                                                                            <field name="virtual_stock_qty" nolabel="1" readonly="1" style="font-weight: bold; font-size: 12px; color: #842029;"/>
                                                                        </div>
                                                                        <div class="col-4">
                                                                            <small class="text-muted d-block" style="font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Requested Qty</small>
                                                                            <field name="product_uom_qty" nolabel="1" readonly="1" style="font-weight: bold; font-size: 12px; color: #842029;"/>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                
                                                                <!-- Hidden fields for computation -->
                                                                <field name="stock_status" invisible="1"/>
                                                            </group>
                                                        </group>
                                                    </form>
                                                </field>
                                            </group>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                    <field name="note" attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}" class="oe-bordered-editor" nolabel="1" placeholder="Terms and conditions..."/>
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="tax_totals_json" widget="account-tax-totals-field" nolabel="1" colspan="2"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>
                        </page>
                        <page string="Other Info" name="other_info">
                            <group>
                                <group>
                                    <field name="fiscal_position_id" attrs="{'readonly': [('state', 'in', ['cancel', 'confirm', 'lock'])]}"/>
                                </group>
                                <group></group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

